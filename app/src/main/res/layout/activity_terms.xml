<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_terms_and_cond"
    tools:context=".TermsActivity">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="285dp"
        app:layout_constraintGuide_percent="0.30" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="285dp"
        app:layout_constraintGuide_percent="0.65" />

    <TextView
        android:id="@+id/tittle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="Aturan dan Syarat Sewa"
        android:gravity="right"
        android:textSize="20sp"
        android:textColor="#4D8CC1"
        android:textStyle="bold"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/guideline"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@id/guideline2"
        />

    <TextView
        android:layout_width="349dp"
        android:layout_height="370dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textColor="#4D8CC1"
        android:text="1. Untuk Jaminan Sewa Peminjam meninggalkan E-KTP / SIM / KTM yang BERLAKU dan JELAS (usahakan membawa 2 identitas)
    \n\n
2. Jika Masih Pelajar Bisa Menggunakan Kartu Pelajar (malang) + Fotokopi KK
    \n\n
3. Bagi yang melakukan Booking kemudian membatalkan, uang DP akan hangus.
\n\n
4. Hitungan Sewa Per  Hari = 24 jam setelah jam pengambilan barang, Jika Lebih 24jam Hitungan 1,5 hari.
\n\n
5. Jika Sewa 2Hari atau Lebih hitungan Per Malam.
\n\n
4. Keterlambatan dalam pengembalian akan dikenakan Charge Tambah Hari.
\n\n
5. Jika ada kehilangan atau kerusakan maka penyewa harus mengganti sesuai barang yang di sewa.
\n\n
6. Penyewa mengembalikan dengan kondisi lengkap, diusahakan Bersih, tidak perlu di cuci."
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tittle" />



</androidx.constraintlayout.widget.ConstraintLayout>